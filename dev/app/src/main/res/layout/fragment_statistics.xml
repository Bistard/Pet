<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.statistics.StatisticsFragment"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/statistics_scrollview"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/statistics_top"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="40dp"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/statistics_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="vertical" />
    </ScrollView>

    <RelativeLayout
        android:id="@+id/statistics_top"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/fragment_home_gradient"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Statistics"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold"

            android:layout_marginStart="85dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="50dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>