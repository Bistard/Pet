<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp"
    android:theme="@style/ThemeOverlay.Pet.AppWidgetContainer">

    <ImageView
        android:id="@+id/widget_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/snail_t" />

    <TextView
        android:id="@+id/widget_todo"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"

        android:layout_toEndOf="@+id/widget_img"
        android:layout_toRightOf="@+id/widget_img"
        android:singleLine="true"
        android:text="@string/TODO"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:id="@+id/appwidget_todo_layout0"
        android:layout_width="211dp"
        android:layout_height="20dp"
        android:layout_below="@id/widget_todo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="50dp"
        android:layout_toEndOf="@+id/widget_img"
        android:layout_toRightOf="@+id/widget_img"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/appwidget_todo_checkbox0"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_check_box_24" />
        <ImageView
            android:id="@+id/appwidget_todo_icon0"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/education_icon" />

        <TextView
            android:id="@+id/appwidget_todo_text0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="mytext"
            android:textColor="@color/yellow_150"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/appwidget_todo_layout1"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/appwidget_todo_layout0"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="50dp"
        android:layout_toEndOf="@+id/widget_img"
        android:layout_toRightOf="@+id/widget_img">

        <TextView
            android:id="@+id/appwidget_todo_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="mytext"
            android:textColor="@color/yellow_150"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/appwidget_todo_layout2"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/appwidget_todo_layout1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="50dp"
        android:layout_toEndOf="@+id/widget_img"
        android:layout_toRightOf="@+id/widget_img">

        <TextView
            android:id="@+id/appwidget_todo_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="mytext"
            android:textColor="@color/yellow_150"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>